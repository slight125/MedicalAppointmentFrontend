  "figmaInstructions": {
    "import": [
      "1. Create a new Figma file",
      "2. Go to Plugins > Import > Design Tokens",
      "3. Upload this JSON file",
      "4. The color palette, typography, and component styles will be imported",
      "5. Create a style guide page using the imported tokens"
    ],
    "colorSetup": [
      "1. Create color styles from the colorPalette section",
      "2. Use the primary colors for main actions and branding",
      "3. Use secondary colors for backgrounds and borders",
      "4. Use semantic colors (success, warning, error) for status indicators"
    ],
    "typographySetup": [
      "1. Import Inter font from Google Fonts",
      "2. Create text styles using the typography.scales",
      "3. Set up character styles for headings, body text, and captions"
    ],
    "componentLibrary": [
      "1. Create component variants for each component type",
      "2. Use the defined states (hover, active, disabled) as variants",
      "3. Apply the color and typography tokens consistently",
      "4. Create responsive variants for different screen sizes"
    ],
    "layoutGrids": [
      "1. Set up layout grids for each breakpoint",
      "2. Use the defined container widths and spacing",
      "3. Create responsive design using the grid system",
      "4. Apply consistent padding and margins"
    ]
  },
  "designPhilosophy": {
